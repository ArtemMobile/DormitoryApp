<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/accent_bright"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:letterSpacing="0"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/sf_pro_bold"
                android:text="Генеральная уборка "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_pro_reg"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="9 исслеsfsmkfksdkfdsnksfdnkfdnnsfnjnjdsnjdnjsfjnsfjnsfdjnnjfjnfjnfdjnfjnfjnfnjnjnsfdjnsfdfjnjsfjnsjnsfdjnfdjnfdjnfjsdfnjsnfdjnsdjnjnsfjsdfjnfjnfdsjndnjsfjnfдований"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerbose"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="10dp"
                android:text="Подробнее"
                android:letterSpacing="0"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_semi"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>