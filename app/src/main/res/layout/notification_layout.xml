<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/accent_bright">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notificationLogo"
            android:layout_width="30dp"
            android:layout_margin="10dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/og" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationTitle"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_semi"
                android:layout_height="wrap_content"
                android:text="sdfdsfdsffds" />

            <TextView
                android:id="@+id/tvNotiicationMessage"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_reg"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="sdfdsfdsffdfgfdgfgduhfgdhufdghufdguhdfghudgfhufgdhufdgfuhgdfhudgfhuufhguhdfghudgfhudghudfguhdhfuhdfguhgdfds" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>